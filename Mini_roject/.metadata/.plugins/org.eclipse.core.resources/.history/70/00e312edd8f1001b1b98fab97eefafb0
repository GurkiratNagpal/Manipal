package com.tels.entity;

import java.util.ArrayList;

public class Warehouse {
	
	
	public String getLocation(Item i) {
		String locId = i.getLocationID();
		String[] warehouse = locId.split("-");
		int zone = warehouse[0].charAt(0) -'A';
		int aisle =Integer.parseInt(warehouse[1]);
		int shelf = Integer.parseInt(warehouse[2].substring(1));
		int bin = Integer.parseInt(warehouse[3]);
		return ("Zone "+ zone+ " Aisle " +aisle+ "Shelf " +shelf+ "Bin " +bin); 
	}
	
	
	
	public int[] getItemPrice(ArrayList<Item> item_list) {
		int[] investment = new int[3];
		for(Item i: item_list) {
			String id =i.getItemId();
			String prod_type = id.split("-")[0];
			if (prod_type.equalsIgnoreCase("pd")) {
				
				investment[0]+= i.getPrice()*i.getUnits();	
			}
			else if (prod_type.equalsIgnoreCase("hcp")) {
				investment[1]+= i.getPrice()*i.getUnits();
			}
			else {
				investment[2]+= i.getPrice()*i.getUnits();
			}
		}
		return investment;
	}

}
